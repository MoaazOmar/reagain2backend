<%- include('parts/header') %>
<%- include('parts/navbar') %>
<style>
    .container {
        margin-top: 20px;
        max-width: 600px;
        background-color: #f9f9f9;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h1 {
        text-align: center;
        color: #333;
        margin-bottom: 20px;
        font-weight: 600;
    }

    .alert {
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid transparent;
        border-radius: 4px;
        font-size: 14px;
    }

    .alert-success {
        color: #3c763d;
        background-color: #dff0d8;
        border-color: #d6e9c6;
    }

    .alert-danger {
        color: #a94442;
        background-color: #f2dede;
        border-color: #ebccd1;
    }

    .form-control {
        margin-bottom: 10px;
        padding: 10px;
        font-size: 16px;
        border-radius: 4px;
        border: 1px solid #ccc;
        width: 100%;
        box-sizing: border-box;
    }

    .btn-primary {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        background-color: #007bff;
        border-color: #007bff;
        color: #fff;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .btn-primary:focus {
        outline: none;
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
    }
</style>
<div class="container">
    <h1>Add Products</h1>

    <!-- Success Messages -->
    <% if (messages.success && messages.success.length > 0) { %>
        <div class="alert alert-success">
            <% messages.success.forEach(function(message) { %>
                <p><%= message %></p>
            <% }); %>
        </div>
    <% } %>

    <!-- Error Messages -->
    <% if (messages.error && messages.error.length > 0) { %>
        <div class="alert alert-danger">
            <% messages.error.forEach(function(message) { %>
                <p><%= message %></p>
            <% }); %>
        </div>
    <% } %>

    <!-- Product Form -->
    <form action="/admin/add" method="POST" enctype="multipart/form-data">
        <input type="text" class="form-control" name="name" placeholder="Product Name">
        <input type="number" class="form-control" name="price" placeholder="Product Price">
        <input type="text" class="form-control" name="category" placeholder="Product Category">
        <input type="text" class="form-control" name="color" placeholder="Product Category">
        <input type="text" class="form-control" name="gender" placeholder="Gender">
        <input type="file" class="form-control" name="image" placeholder="Product Image">
        <button type="submit" class="btn btn-primary mt-2">Add Product</button>
    </form>
</div>

<%- include('parts/footer') %>
